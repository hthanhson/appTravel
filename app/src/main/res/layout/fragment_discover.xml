<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige_light"
    android:paddingHorizontal="16dp"
    android:paddingTop="24dp">

    <!-- TITLE -->
    <TextView
        android:id="@+id/tvDiscoverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/dark_brown"
        android:paddingBottom="12dp" />

    <!-- TABLAYOUT -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDiscover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/grey_600"
        app:tabSelectedTextColor="@color/blue_primary"
        app:tabIndicatorColor="@color/blue_primary"
        app:tabIndicatorHeight="3dp"
        android:background="@color/beige_light" />

    <!-- VIEWPAGER -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpDiscover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

</LinearLayout>

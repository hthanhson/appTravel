<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPlan"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Plan Image (Circular at top) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#F0F0F0">

            <ImageView
                android:id="@+id/ivPlanImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/placeholder_reef"
                android:scaleType="centerCrop"
                android:background="@drawable/circular_image_background" />

        </FrameLayout>

        <!-- Plan Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Plan Name -->
            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quito double"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Location/Country -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivFlag"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Ecuador"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Stats Row (Likes, Comments, etc) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Time/Day indicator -->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    app:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="08:00"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Highlight Border (Bottom) -->
        <View
            android:id="@+id/highlightIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#1F6FEB"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

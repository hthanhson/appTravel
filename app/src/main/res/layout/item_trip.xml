<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Trip Image -->
        <ImageView
            android:id="@+id/ivTripImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/trip_image_background"
            android:scaleType="centerCrop"
            android:src="@drawable/trip_placeholder" />

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTripName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit the Great Barrier Reef"
                android:textColor="#111827"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvTripDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 - 15 July 2024"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_money"
                    android:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvTripPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75.000.000Ä‘"
                    android:textColor="#6B7280"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <ImageView
            android:id="@+id/ivTripAction"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/trip_action_background"
            android:padding="8dp"
            android:src="@drawable/ic_bookmark"
            android:tint="@android:color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
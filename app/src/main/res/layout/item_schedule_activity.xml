<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timeline Circle -->
    <View
        android:id="@+id/timelineCircle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/timeline_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Timeline Line -->
    <View
        android:id="@+id/timelineLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timelineCircle"
        app:layout_constraintStart_toStartOf="@id/timelineCircle"
        app:layout_constraintTop_toTopOf="@id/timelineCircle" />

    <!-- Activity Icon -->
    <ImageView
        android:id="@+id/imgActivityType"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_lodgingsss"
        app:layout_constraintStart_toStartOf="@id/timelineCircle"
        app:layout_constraintTop_toTopOf="@id/timelineCircle"
        app:tint="@android:color/white" />

    <!-- Activity Time -->
    <TextView
        android:id="@+id/tvActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="08:30 AM"
        android:textColor="#1F2937"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timelineCircle" />

    <!-- Activity Title -->
    <TextView
        android:id="@+id/tvActivityTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Flight to Paris"
        android:textColor="#1F2937"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvActivityTime"
        app:layout_constraintStart_toEndOf="@+id/timelineCircle"
        app:layout_constraintTop_toTopOf="@+id/timelineCircle" />

    <!-- Activity Location -->
    <TextView
        android:id="@+id/tvActivityLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Charles de Gaulle Airport"
        android:textColor="#6B7280"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timelineCircle"
        app:layout_constraintTop_toBottomOf="@+id/tvActivityTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
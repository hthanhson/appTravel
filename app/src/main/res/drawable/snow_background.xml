<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Snow background with gradient -->
    <item>
        <shape>
            <gradient
                android:startColor="#E8F4F8"
                android:centerColor="#F0F8FF"
                android:endColor="#FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Mountains silhouette -->
    <item android:bottom="200dp">
        <shape>
            <solid android:color="#D1E7DD" />
        </shape>
    </item>
    
    <!-- Snow trees pattern -->
    <item android:bottom="100dp">
        <shape>
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>

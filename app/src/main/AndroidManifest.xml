<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Internet permission for API calls and map tiles -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Storage permissions for OSMDroid caching -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".AppTravelApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTravel"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        
        <!-- Splash Activity - Launcher -->
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppTravel.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Language Selection Activity -->
<!--        <activity-->
<!--            android:name=".ui.activity.LanguageSelectionActivity"-->
<!--            android:exported="false"-->
<!--            android:theme="@style/Theme.AppTravel.NoActionBarMain" />-->
        
        <!-- Onboarding Activity -->
        <activity
            android:name=".ui.activity.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
        
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
        
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
        
        <!-- Main Activity -->
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
        
        <!-- Create Trip Activity -->
        <activity
            android:name=".ui.trip.CreateTripActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />

        <activity
            android:name=".ui.trip.detail.tripdetail.TripDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />

        <activity
            android:name=".ui.trip.map.TripMapActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />

        <activity
            android:name=".ui.trip.list.PlanSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Flight Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.FlightDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Lodging Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.LodgingDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Boat Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.BoatDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Train Detail Activity -->
<!--        <activity-->
<!--            android:name=".ui.plandetail.TrainDetailActivity"-->
<!--            android:exported="false"-->
<!--            android:theme="@style/Theme.AppTravel.NoActionBarMain" />-->
            
        <!-- Activity Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.ActivityDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Restaurant Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.RestaurantDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
        <!-- Car Rental Detail Activity -->
        <activity
            android:name=".ui.trip.detail.plandetail.CarRentalDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTravel.NoActionBarMain" />
            
    </application>

</manifest>